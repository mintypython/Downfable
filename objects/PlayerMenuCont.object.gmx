            <string>///Backing Out
if active = 0
{
    exit;
}
if page != 0
{
    if KeyCont.key_secondary[0] = 1
    {
        if page = 5
        {
            page = 2;
            x_index = 0;
            y_index = 0;
            page_init();
        }
        else
        {
            var temp = page;
            page = 0;
            y_index = 0;
            page_init();
            x_index = temp - 1;
        }
    }
}
